<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Employee Payroll System</display-name>

    <!-- Employee Registration Servlet -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.yourapp.payroll.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>

    <!-- Employee Login Servlet -->
    <servlet>
        <servlet-name>EmployeeLoginServlet</servlet-name>
        <servlet-class>com.yourapp.payroll.EmployeeLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeLoginServlet</servlet-name>
        <url-pattern>/EmployeeLoginServlet</url-pattern>
    </servlet-mapping>

    <!-- Admin Login Servlet -->
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>com.yourapp.payroll.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/AdminLoginServlet</url-pattern>
    </servlet-mapping>

    <!-- Leave Application Servlet -->
    <servlet>
        <servlet-name>ApplyLeaveServlet</servlet-name>
        <servlet-class>com.yourapp.payroll.ApplyLeaveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApplyLeaveServlet</servlet-name>
        <url-pattern>/ApplyLeaveServlet</url-pattern>
    </servlet-mapping>

    <!-- Leave Approval Servlet (Admin) -->
    <servlet>
        <servlet-name>LeaveApprovalServlet</servlet-name>
        <servlet-class>com.yourapp.payroll.LeaveApprovalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LeaveApprovalServlet</servlet-name>
        <url-pattern>/LeaveApprovalServlet</url-pattern>
    </servlet-mapping>

    <!-- Attendance Marking Servlet -->
    <servlet>
        <servlet-name>AttendanceServlet</servlet-name>
        <servlet-class>com.yourapp.payroll.AttendanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AttendanceServlet</servlet-name>
        <url-pattern>/AttendanceServlet</url-pattern>
    </servlet-mapping>

    <!-- Payroll Generation Servlet -->
    <servlet>
        <servlet-name>PayrollServlet</servlet-name>
        <servlet-class>com.yourapp.payroll.PayrollServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PayrollServlet</servlet-name>
        <url-pattern>/PayrollServlet</url-pattern>
    </servlet-mapping>

    <!-- Welcome Page -->
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>

</web-app>
